<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd"
>

    <parameters>
        <parameter key="sylius_blogger.repository.post.class">Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository</parameter>
        <parameter key="sylius_blogger.sorter.post.class">Sylius\Bundle\BloggerBundle\Sorting\ORM\PostSorter</parameter>
    </parameters>

    <services>
        <service id="sylius_blogger.doctrine.orm.metadata.post"
                factory-service="doctrine.orm.default_entity_manager"
                factory-method="getClassMetadata"
                class="Doctrine\ORM\Mapping\ClassMetadata"
                public="false"
        >
            <argument>%sylius_blogger.model.post.class%</argument>
        </service>
        <service id="sylius_blogger.repository.post" class="%sylius_blogger.repository.post.class%">
            <argument type="service" id="sylius_blogger.manager.post" />
            <argument type="service" id="sylius_blogger.doctrine.orm.metadata.post" />
        </service>
        <service id="sylius_blogger.manager.post" alias="doctrine.orm.entity_manager" />
        <!-- sorters... -->
        <service id="sylius_blogger.sorter.post" class="%sylius_blogger.sorter.post.class%">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
    </services>

</container>
